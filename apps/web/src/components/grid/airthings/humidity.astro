---
import OptimalityCard from '@alexgodfrey/web/components/conquer/optimality-card.tsx';
import AirthingsStat from '@alexgodfrey/web/components/grid/airthings/airthings-stat.astro';
---

<AirthingsStat
  queryType="humidity"
  serial="bedroomSerial"
  label="Humidity"
  location="Bedroom"
  server:defer
>
  <OptimalityCard
    slot="fallback"
    label="Humidity"
    description="Bedroom"
    statusLabel="Loading"
    optimality="optimal"
    value="scramble"
    ranges={[
      { label: 'Too Dry', color: 'bg-red-500', min: 0, max: 40 },
      { label: 'Optimal', color: 'bg-green-500', min: 40, max: 60, progress: 0.5 },
      { label: 'Mold Risk', color: 'bg-red-500', min: 60, max: 100 },
    ]}
  />
</AirthingsStat>
